#!/bin/bash

# See: https://en.wikipedia.org/wiki/List_of_Unicode_characters
sun=☉
earth=♁
alearth=🜃
ground=⏚
cloud=☁
atom=⚛
neptune=♆
airplane=✈︎
heart=♥︎
diamonds=❖
yinyang=☯
flag=⚐
node=☊
star=★
dccurrent=𝌂

case `hostname -s | tr '[:upper:]' '[:lower:]'` in
    "jdp-laptop")
        location=$airplane
        ;;
    "jdp--pc")
        location=$ground
        ;;
    "jdp-mac")
        location=$alearth
        ;;
    "unused-1")
        location=$dccurrent
        ;;
    "unused-2") 
        location=$cloud
        ;;
    "unused-3")
        location=$diamonds
        ;;
    "proto")
        location=$yinyang
        ;;
    "capture")
        location=$flag
        ;;
    "unused-4")
        location=$earth
        ;;
    "unused-6") 
        location=$neptune
        ;;
    "unused-7") 
        location=$heart
        ;;
    "unused-8")
        location=$node
	;;
    *)
        location="¿"
        ;;
esac

echo -n $location
